/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.footer~.content {
  border-bottom: 55px solid transparent;
}
.header~.content {
  border-top: 45px solid transparent;
}
.clearfix::after{
  content: '';
  display: block;
  clear: both;
}
